<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow">
    <title>@ViewData["Title"] - Indian Music</title>
    <meta name="description" content="A multilingual website dedicated to Indian Music, IndianMusic.in offers a rich collection of Indian classical music, contemporary hits, Raags, and cultural insights. Discover timeless melodies and musical heritage from India." />
    <meta name="keywords" content="Indian music, Indian classical music, Raag, Tala, That, Raaga, Thaat, Odissi, Hindusthani Classical, Film Songs, Movies, Artist, Instrumental Music, Bollywood songs, Folk Songs, Lyrics, Notation, Swaralipi, Indian musical heritage, Indian instruments, IndianMusic.in" />
    <meta name="author" content="Kishor Chandra Tripathy, Email: tripathykishor8@gmail.com">

    <!-- Canonical URL (avoid duplicate content issues) -->
    <link rel="canonical" href="https://indianmusic.in/">

    <!-- Open Graph for Social Sharing -->
    <meta property="og:title" content="Indian Classical Music | Flute, Ragas & Artists">
    <meta property="og:description" content="Discover ragas, learn flute, and explore Indian music traditions with tutorials and artist biographies.">
    <meta property="og:image" content="https://indianmusic.in/images/logo.jpg">
    <meta property="og:url" content="https://indianmusic.in/">
    <meta property="og:type" content="website">

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Indian Classical Music | Flute, Ragas & Artists">
    <meta name="twitter:description" content="Learn ragas, explore flute tutorials, and discover Indian classical music.">
    <meta name="twitter:image" content="https://indianmusic.in/images/logo.jpg">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndianMusic.WebApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&family=Lavishly+Yours&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=artist" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    <partial name="_WebHeaderPartial" />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <partial name="_WebFooterPartial" />
    <partial name="_WebPopupErrorMessagePatrial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
